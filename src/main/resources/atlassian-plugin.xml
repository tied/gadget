<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    <param name="plugin-icon">images/pluginIcon.png</param>
    <param name="plugin-logo">images/pluginLogo.png</param>
  </plugin-info>
  <!-- add our i18n resource -->
  <resource type="i18n" name="i18n" location="reports-plugin"/>
  <!-- Images -->
  <resource type="download" name="logo.png" location="plugin-logo.png"/>
  <resource type="download" name="screenshot.png" location="plugin-screenshot.png"/>
  <resource type="download" name="thumbnail.png" location="plugin-thumbnail.png"/>
  <!-- add our web resources -->
  <web-resource key="issues-metric-resources" name="reports-plugin Web Resources">
    <dependency>com.atlassian.auiplugin:ajs</dependency>
    <!-- JavaScript files -->
    <resource type="download" name="reports-plugin.js" location="/js/reports-plugin.js">
      <property key="content-type" value="text/javascript"/>
    </resource>
    <resource type="download" name="webResourceTest" location="js/test.js">
      <property key="content-type" value="text/javascript"/>
    </resource>
    <resource type="download" name="restRequestsResource" location="js/restrequests.js">
      <property key="content-type" value="text/javascript"/>
    </resource>
    <context>reports-plugin</context>
  </web-resource>

  <!-- GADGETS -->
  <gadget key="issues-metric-gadget" name="Issues metric graph" location="gadgets/issues-graph-gadget.xml">
    <description>Graph over issues</description>
  </gadget>
  <resource type="download" name="i18n/messages.xml" location="i18n/messages.xml">
    <param name="content-type" value="text/xml; charset=UTF-8"/>
  </resource>
  <servlet name="search Servlet" i18n-name-key="search-servlet.name" key="search-servlet" class="com.avrethem.servlet.searchServlet">
    <description key="search-servlet.description">The search Servlet Plugin</description>
    <url-pattern>/searchservlet</url-pattern>
  </servlet>
  <rest name="data Generator" i18n-name-key="data-generator.name" key="data-generator" path="/datagenerator" version="1.0">
    <description key="data-generator.description">The data Generator Plugin</description>
  </rest>
</atlassian-plugin>
